/* pages/component/shoping/alertbox/alertbox.wxss */

.mask {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.content {
  position: fixed;
  width: 100%;
  height: 500rpx;
  bottom: -500rpx;
  transition: all 400ms ease;
  box-sizing: border-box;
  padding: 30rpx;
  background: #fff;
}

.c-top-l image {
  width: 177rpx;
  height: 177rpx;
}

.c-top-l-dis {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.c-top-l {
  display: flex;
}

.content-top {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.c-top-l-dis text {
  font-size: 28rpx;
  padding-left: 28rpx;
}

.p-price {
  color: #b4282d;
}

.p-num {
  color: #333;
  padding-top: 10rpx;
}

.addsubbox {
  width: 322rpx;
  height: 71rpx;
  line-height: 71rpx;
  display: flex;
  border: 1rpx solid #ccc;
  margin-top: 20rpx;
  align-items: center;
}

.addsubbox text {
  font-size: 28rpx;
  color: #333;
}

.c-add {
  width: 180rpx;
  text-align: center;
  border-right: solid 1rpx #ccc;
}

.c-sub {
  width: 180rpx;
  text-align: center;
  border-left: solid 1rpx #ccc;
}

.addsubbox input {
  text-align: center;
  font-size: 28rpx;
}

.b-top {
  font-size: 28rpx;
  color: #333;
  padding-top: 38rpx;
}

.c-top-r {
  font-size: 30rpx;
  color: #999;
}
