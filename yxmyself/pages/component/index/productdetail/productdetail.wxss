/* pages/component/index/productdetail/productdetail.wxss */
@import "/wxParse/wxParse.wxss";
/* banner滚动图 */

.banner swiper {
  width: 100%;
  height: 750rpx;
}

.brand-item image {
  width: 100%;
  height: 100%;
}

/* 描述*/

.shop-top {
  display: flex;
  justify-content: space-between;
  padding: 26rpx 26rpx;
  box-sizing: border-box;
  background: #f4f4f4;
}

.flag {
  width: 9rpx;
  height: 9rpx;
  border: 1rpx solid red;
  border-radius: 50%;
  display: inline-block;
}

.shop-top view {
  align-items: center;
  display: flex;
}

.s-title {
  font-size: 25rpx;
  color: #666;
  padding-left: 10rpx;
}

/* 商品详情描述 */

.pro-discribe {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pro-name {
  font-size: 41rpx;
  padding: 20rpx;
  color: #333;
}

.pro-discribe {
  margin-bottom: 25rpx;
  font-size: 24rpx;
  color: #999;
}

.pro-price {
  margin-top: 10rpx;
  font-size: 35rpx;
  color: #b4282d;
  padding-bottom: 100rpx;
  border-bottom: solid 1rpx #f4f4f4;
  width: 100%;
  text-align: center;
}

.pro-arrow-right {
  width: 52rpx;
  height: 52rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
}

.sel-num {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 22rpx solid #f4f4f4;
}

.sel-num text {
  font-size: 28rpx;
  color: #333;
}

/* 底部购物车 */

.cart {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx solid #f4f4f4;
  background: #fff;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
}

.cart-l {
  width: 46%;
  /* background: red; */
  display: flex;
  align-items: center;
   position: relative;
}
.cart-l view{
  flex: 1;
  display: flex;
  justify-content: center;
}

.cart-r {
  width: 54%;
  font-size: 28rpx;
  color: #333;
  display: flex;
}

.cart-r view{
  flex: 1;
  text-align: center;
}
.startt{
  height: 100rpx;
  display: flex;
  align-items: center;
  border-right: solid 1rpx #f4f4f4;
}
.star {
  display: block;
  height: 44rpx;
  width: 44rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
}

.carts {
  display: block;
  height: 44rpx;
  width: 44rpx;
}
.buy{
   border-left: solid 1rpx #f4f4f4;
   border-right: solid 1rpx #f4f4f4;
   color:#333;
}
.joincart{
  background:#b4282d;
  color:#ffffff;
}
.cartt{
  display: flex;
  align-items: center;
  
}
.cart-hb{
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  background:  #b4282d;
  border-radius: 50%;
  font-size: 18rpx;
  text-align: center;
  color: #ffffff;
  position: absolute;
  top:19rpx;
  left:275rpx;
}
.mydescc{
  font-size: 0;
}

.mydescc>image {
  display: block
}