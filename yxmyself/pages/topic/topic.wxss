/* pages/topic/topic.wxss */

.topic-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 30rpx solid #f4f4f4;
}

.topic-item image {
  width: 100%;
  height: 415rpx;
}

.title {
  color: #333;
  font-size: 35rpx;
  margin-top: 30rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  padding: 14rpx 0rpx;
}

.price {
  color: #b4282d;
  font-size: 27rpx;
  padding-bottom: 20rpx;
}
