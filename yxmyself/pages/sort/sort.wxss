/* pages/sort/sort.wxss */

/* 搜索 */

page {
  height: 100%;
}

.sort {
  height: 100%;
}

.content {
  height: calc(100% - 60rpx);
  display: flex;
  margin-top: 8rpx;
  box-sizing: border-box;
}

.search {
  display: flex;
  background: #ededed;
  align-items: center;
  justify-content: center;
  margin: 0rpx 30rpx;
  border-radius: 10rpx;
  height: 60rpx;
}

.search image {
  width: 28rpx;
  height: 28rpx;
}

.search input {
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #333;
}

/* 分类 */

/* 左边 */

.cate-l-item {
  text-align: center;
  line-height: 90rpx;
  width: 162rpx;
  height: 90rpx;
  color: #333;
  font-size: 28rpx;
  border-left: 6rpx solid #fff;
}

.content-left {
  height: 100%;
  border-right: solid 1px #ededed;
}

content-right {
  height: 100%;
}

.active {
  color: #ab2b2b;
  font-size: 36rpx;
  border-left: 6rpx solid #ab2b2b;
}

/* 右边 */

.content-right {
  flex: 1;
  /* background: red; */
  display: flex;
  justify-content: center;
}

.content-right-ctt {
  width: 92%;
  /* background: blue; */
  display: flex;
  flex-direction: column;
  align-items: center;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.content-right-ctt image {
  width: 100%;
  height: 222rpx;
}

.content-right-ctt text {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  padding: 50rpx 0rpx;
  box-sizing: border-box;
}

.cate-total {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}

.cate-item {
  width: calc(100%/3);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cate-item image {
  width: 90%;
  height: 170rpx;
}

.cate-item text {
  padding: 0;
  font-size: 28rpx;
  color: #333;
}
